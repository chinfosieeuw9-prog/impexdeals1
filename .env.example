# Backend configuration example (rename to .env and adjust values)
PORT=4000
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=changeme
DB_NAME=partijtrade
JWT_SECRET=change_this_to_a_long_random_string
# Rate limiting
LOGIN_WINDOW_MS=900000
LOGIN_MAX=10
RESET_WINDOW_MS=3600000
RESET_MAX=30
# Optional Redis (ENABLE_REDIS=1 and REDIS_URL if using)
ENABLE_REDIS=0
# Enable basic Content-Security-Policy (helmet)
ENABLE_CSP=0
# Logging level: error|warn|info|debug
LOG_LEVEL=info

# ---------------- Frontend (React) build-time vars ----------------
# Basis API endpoint (frontend gebruikt apiClient; override hier indien niet standaard)
REACT_APP_API_BASE=http://localhost:4000
# Optioneel: simpele log level in frontend code
REACT_APP_LOG_LEVEL=info
